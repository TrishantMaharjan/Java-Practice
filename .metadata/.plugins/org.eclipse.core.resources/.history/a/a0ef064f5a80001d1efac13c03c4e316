package Array;

public class ArrayDocs {
	public static void main(String[] args) {
		/*
		 * ========== Array ==========
		 * # used to store and process homogeneous data.
		 * # collection or group of multiple values of same data type
		 * # has fixed length or size
		 * # also contains duplicate data
		 * # data stored in the basis of indices (starts from 0)
		 * # continuous memory allocation
		 * # random access
		 * # is implicitly treated as object in Java
		 * 
		 * syntax: 
		 * 		data_type array_name[] = new data_type[size];
		 * 		data_type[] array_name = new data_type[size];
		 * 
		 */
	}
}
